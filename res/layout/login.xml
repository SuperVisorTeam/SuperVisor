<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_login_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/background_login_div"
        android:padding="15dip" >

        <AutoCompleteTextView
            android:id="@+id/et_login_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_login"
            android:dropDownHorizontalOffset="45dp"
            android:dropDownWidth="210dp"
            android:hint="请输入账号"
            android:inputType="number"
            android:paddingLeft="45dp"
            android:singleLine="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_login_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_login_account"
            android:layout_alignLeft="@id/et_login_account"
            android:layout_alignTop="@id/et_login_account"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="账号" />

        <EditText
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/et_login_account"
            android:layout_marginTop="5dp"
            android:background="@drawable/edit_login"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingLeft="45dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/tv_login_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/et_login_password"
            android:layout_alignLeft="@id/et_login_password"
            android:layout_alignTop="@id/et_login_password"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="密码" />

        <CheckBox
            android:id="@+id/cb_login_rm_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_login_password"
            android:layout_below="@id/et_login_password"
            android:layout_marginTop="5dp"
            android:checked="true"
            android:text="记住密码"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/cb_login_auto_debark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@id/tv_login_password"
            android:layout_alignTop="@id/cb_login_rm_password"
            android:checked="true"
            android:text="自动登陆"
            android:textColor="#000000" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login_debark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_login_edit"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="登录"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="150dp"
        android:text="广工督导系统"
        android:textColor="@color/black"
        android:textSize="20dp" />

</RelativeLayout>