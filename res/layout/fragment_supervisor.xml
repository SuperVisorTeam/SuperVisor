<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/com.gdut.supervisor"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <!-- 督导功能的Fragment -->

    <com.gdut.supervisor.view.CircleLayout
        android:id="@+id/main_circle_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        circle:firstChildPosition="South"
        circle:isRotating="true"
        circle:rotateToCenter="true" >

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_teacher_search"
            circle:name="@string/teacher_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/icon_facebook" />

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_history_search"
            circle:name="@string/history_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_google" />

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_preparewrite"
            circle:name="@string/preparewrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_linkedin" />

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_directwrite"
            circle:name="@string/directwrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_myspace" />

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_others"
            circle:name="其它···"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_twitter" />

        <com.gdut.supervisor.view.CircleImageView
            android:id="@+id/imgView_supervisor_class_search"
            circle:name="@string/class_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_wordpress" />
    </com.gdut.supervisor.view.CircleLayout>

    <TextView
        android:id="@+id/txt_supervisor_function_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="35dp"
        android:text="test"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp" >
    </LinearLayout>

</LinearLayout>