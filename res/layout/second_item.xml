                    android:text="0" />

                <Button
                    android:id="@+id/phoneaddButton"
                    style="@style/button2"
                    android:layout_marginLeft="10dp"
                    android:text="+" />
            </TableRow>
        </TableRow>

        <TableRow android:background="@drawable/shape1" >

            <TextView
                style="@style/textview2"
                android:text="@string/sleep" />

            <TableRow style="@style/tablelayout2" >

                <Button
                    android:id="@+id/sleepreduceButton"
                    style="@style/button2"
                    android:text="-" />

                <EditText
                    android:id="@+id/sleepnumEditText"
                    style="@style/edittext2"
                    android:text="0" />

                <Button
                    android:id="@+id/sleepaddButton"
                    style="@style/button2"
                    android:layout_marginLeft="10dp"
                    android:text="+" />
            </TableRow>
        </TableRow>

        <TableRow android:layout_marginBottom="1dp" >

            <TextView
                style="@style/textview2"
                android:text="@string/shone" />

            <TableRow style="@style/tablelayout2" >

                <Button
                    android:id="@+id/shonereduceButton"
