                    style="@style/edittext2"
                    android:text="0" />

                <Button
                    android:id="@+id/leaveaddButton"
                    style="@style/button2"
                    android:layout_marginLeft="10dp"
                    android:text="+" />
            </TableRow>
        </TableRow>

        <TableRow android:background="@drawable/shape1" >

            <TextView
                style="@style/textview2"
                android:text="@string/eat" />

            <TableRow style="@style/tablelayout2" >

                <Button
                    android:id="@+id/eatreduceButton"
                    style="@style/button2"
                    android:text="-" />

