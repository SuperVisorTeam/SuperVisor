                    android:id="@+id/eatnumEditText"
                    style="@style/edittext2"
                    android:text="0" />

                <Button
                    android:id="@+id/eataddButton"
                    style="@style/button2"
                    android:layout_marginLeft="10dp"
                    android:text="+" />
            </TableRow>
        </TableRow>

        <TableRow>

            <TextView
                style="@style/textview2"
                android:text="@string/phone" />

